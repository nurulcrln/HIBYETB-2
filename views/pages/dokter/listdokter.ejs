<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../master/header'); %>
</head>
<body>

<header>
  <%- include('../../master/navbar'); %>
</header>

<main>

  <div class="slide-container">
    <div class="slide-content">
        <div class="row">
            <% if(data.length){
                            
                for(var i = 0; i< data.length; i++) {%> 
                  <div class="col-sm-6">  
                    <div class="card">
                      <div class="image-content">
                        <span class="overlay"></span>
    
                        <div class="card-image">
                            <img src="<%= data[i].url_foto%>" class="card-img">
                        </div>
                      </div>
                      
                      <div class="card-content">
                        <p class="description"> Nama: <%= data[i].nama%></p>
                        <p class="description"> Email: <%= data[i].email%></p>
                        <p class="description"> Phone: <%= data[i].phone%></p>
                        <p class="description"> Spesialis: <%= data[i].spesialis%></p>
                        <p class="description"> Tempat Praktik: <%= data[i].tempat_praktik%></p>
                      </div>
                    </div>
                  </div>
                  <% }
            }else{ %>
              <div class="alert alert-danger" role="alert">
                Data Tidak Ditemukan !
              </div>
            <% } %>  

        </div>
    </div>
</div>

</main>

<footer>
  <%- include('../../master/footer'); %>
</footer>
</body>
</html>


