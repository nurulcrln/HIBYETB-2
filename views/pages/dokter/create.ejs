<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../master/header'); %>
</head>
<body class="container">

<header>
  <%- include('../master/navbar'); %>
</header>


<main>
    <center>
        <h3>Tambah Data</h3>
    </center>

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-0 shadow rounded">
                    <div class="card-body">
                        <form action="/dokter" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                                <label class="font-weight-bold">Nama:</label>
                                <input type="text" name="nama" placeholder="Nama">
                                </div>
                            </div>
                    
                            <div class="form-group">
                                <label class="font-weight-bold">Email</label>
                                <input type="email" name="email" placeholder="Email">
                            </div>
                    
                            <div class="form-group">
                                <label class="font-weight-bold">Phone</label>
                                <input type="number" name="phone" placeholder="Phone">
                            </div>
                    
                            <div class="form-group">
                                <label class="font-weight-bold">Spesialis</label>
                                <input type="text" name="spesialis" placeholder="Spesialis">
                            </div>
                    
                            <div class="form-group">
                                <label class="font-weight-bold">Tempat Praktik</label>
                                <input type="text" name="tempat_praktik" placeholder="Praktik">
                            </div>
                    
                            <div class="form-group">
                                <label class="font-weight-bold">Upload Image</label>
                                <input type="file" name="image">
                            </div>    
                    
                            <!-- Button -->                                      
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<footer>
  <%- include('../master/footer'); %>
</footer>

</body>
</html>