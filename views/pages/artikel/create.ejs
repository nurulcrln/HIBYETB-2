<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../master/header'); %>
</head>

<body>


    <main class="container">

        <form action="/artikel" method="post" enctype="multipart/form-data">
            <br>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="nama-artikel" class="col-form-label">Judul :</label>
                        <input type="text" class="form-control" name="judul" id="judul-artikel" value="<%= judul %>">
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="nk-int-st">
                            <label>Deskripsi</label>
                            <textarea class="form-control" name="deskripsi" id="deskripsi-artikel" rows="10"></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="nk-int-st">
                            <label>Foto</label>
                            <input type="file" name="foto" class="form-control-file" value="<%= foto %>">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="nk-int-st">
                            <label>Pengunggah</label>
                            <input type="text" class="form-control" name="pengunggah" id="pengunggah-artikel"
                                value="<%= pengunggah %>">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="nk-int-st">
                        <button type="submit" class="btn btn-success">
                            <span class="material-symbols-outlined">
                                save
                            </span> Save
                        </button>
                        <a type="button" href="/artikelpage" class="btn btn-warning">
                            <span class="material-symbols-outlined">
                                cancel
                            </span>
                            Cancel
                        </a>
                    </div>
                </div>

        </form>

    </main>

    <footer>
        <%- include('../../master/footer'); %>
    </footer>
</body>

</html>