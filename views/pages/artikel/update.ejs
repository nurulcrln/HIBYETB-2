<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../master/header'); %>
</head>

<body>

    <header>
        <%- include('../../master/navbar'); %>
    </header>

    <main class="container">

        <form action="/updateartikel/<%= id %>" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-10">
                    <div class="form-group">
                        <label for="judul-artikel" class="col-form-label">Judul :</label>
                        <input type="text" class="form-control" name="judul" id="judul-artikel" value="<%= judul %>">
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="nk-int-st">
                            <label>Deskripsi</label>
                            <input type="text" class="form-control" name="deskripsi" id="deskripsi-artikel"
                                value="<%= deskripsi %>">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="nk-int-st">
                            <label>Foto</label>
                            <img src="<%=url_foto%>" alt="" width="10%">
                            <input type="file" name="foto" class="form-control-file" value="<%= foto %>">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <div class="nk-int-st">
                            <label>Pengunggah</label>
                            <input type="text" class="form-control" name="pengunggah" id="pengunggah-artikel"
                                value="<%= pengunggah %>">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="nk-int-st">
                        <button type="submit" class="btn btn-primary">
                            <span class="material-symbols-outlined">
                                update
                            </span>
                            Update
                        </button>
                        <a type="button" href="/artikelpage" class="btn btn-warning">
                            <span class="material-symbols-outlined">
                                cancel
                            </span>
                            Cancel
                        </a>

                    </div>
                </div>

        </form>
    </main>
    <footer>
        <%- include('../../master/footer'); %>
    </footer>
</body>

</html>