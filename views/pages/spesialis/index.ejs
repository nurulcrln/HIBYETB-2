<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../master/header'); %>
</head>
<body class="container">

<header>
    <%- include('../../master/navbar'); %>
</header>

<main>
    <a type="button" href="/createspesialis" class="btn btn-sm btn-primary mb-1 mt-1"> Add Data</a>
    <table border="1">
        <thead>
            <tr>
                <th>No</th>
                <th>id</th>
                <th>Nama</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            <% if(data.length){
                                    
                for(var i = 0; i< data.length; i++) {%>  
                    <tr>
                        <th scope="row" class="text-center"><%= (i+1) %></th>
                        <td><%= data[i].id%></td>
                        <td><%= data[i].nama%></td>
                        <td class="text-center">
                            <a href="/editspesialis/<%=data[i].id%>" class="btn btn-sm btn-primary">EDIT</a>
                            <% var id = data[i].id%>
                            <a onclick="return confirm('Anda yakin menghapus data ini?')" href="/deletespesialis/<%=id%>"  class="btn btn-sm btn-danger">HAPUS</a>
                        </td>
                    </tr>
                <% }
                
            }else{ %>
                <tr>
                    <td colspan="4">
                        <div class="alert alert-danger" role="alert">
                            Data Tidak Ditemukan !
                        </div>
                    </td>
                </tr>
            <% } %>    
        </tbody>
    </table>

    <div id="detail"></div>
</main>

<footer>
    <%- include('../../master/footer'); %>
</footer>
</body>
</html>